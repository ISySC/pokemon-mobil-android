<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Pokemon.SplashScreen">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
    </style>

    <style name="tv_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="tv_style.regular">
        <item name="android:textSize">@dimen/font_18</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="tv_style.bold">
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:fontFamily">@font/inter_bold</item>
    </style>

    <style name="input_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_60</item>
        <item name="android:textSize">@dimen/font_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>